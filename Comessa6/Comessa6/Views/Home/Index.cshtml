<!DOCTYPE html>
@{
    ViewBag.Title = "Comessa6";
}
@using Comessa6.ViewModels;
@model IndexViewModel
<script type="text/javascript" src="../../Scripts/ordering.js"></script>
<script type="text/javascript" src="../../Scripts/jquery-1.10.2.min.js"></script>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">
    <title>Comessa6</title>
    <!-- Bootstrap core CSS -->
    <link href="../../Content/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="../../Content/Site.css" rel="stylesheet">
</head>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-md-4 sidebar">
            <div class="panel-group" id="providers">
                <div class="panel panel-default">
                    @{int i = 0; }
                    @foreach (ProviderViewModel provider in Model.Providers.Providers)
                    {
                        i++;
                        <div class="panel-heading" data-toggle="collapse" data-parent="#providers" href="#@("i" + i.ToString())" providerID="@provider.ID">@provider.Name</div>
                        <div id="@("i" + i.ToString())" class="panel-collapse collapse">
                            <div class="panel-body" id="@("provider" + provider.ID.ToString())"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
    <div class="col-md-4">
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                @{int j = 0; }
                @foreach (OrderViewModel order in Model.RecentOrders.Orders)
                {
                    j++;
                <div class="panel-heading">
                    <a style="display:block" data-toggle="collapse" data-parent="#accordion" href="#@("o" + j.ToString())">@order.ItemName</a>                    
                </div>
                    <div id="@("o" + j.ToString())" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="panel-title pull-left">
                                @order.ProviderName
                            </div>
                            <div class="panel-title">
                                @order.Price
                            </div>
                            @if (order.Status == OrderStatus.Ordered)
                            {
                                <button class="btn btn-default pull-right">Remove</button>
                            }
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    @*<div class="panel-footer" style="font-size: 12px">@order.ProviderName</div>*@
                }
            </div>
        </div>
    </div>
</div>
</div>
<script>    
    $(function () {
        $(".panel-heading").each(function () {
            var button = $(this);
            var providerID = button.attr("providerID");
            if (providerID)
            {
                button.click(function () {
                    var itemsPanel = $("#provider" + providerID);
                    //var orderPanel = document.getElementById("orderPanel");
                    //$("#orderPanel").collapse("hide");
                    if (itemsPanel.itemsLoaded)
                        return;
                    $.ajax({
                        url: "Items/GetItems",//@Url.Action("GetItems"),
                        type: 'GET',
                        cache: false,
                        data: { providerID },                        
                        success: function (result) { itemsPanel.html(result); },
                        error: function (error) { alert("Database failure: " + error.statusText); }
                    });
                    itemsPanel.itemsLoaded = true;
                });
            }
        });
    });
</script>
