<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/index.css" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <img class="comessaTitle" src="@Url.Content("~/Images/logo.png")" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <div style="margin: 14px;">
                            @Html.ActionLink(string.IsNullOrEmpty(HttpContext.Current.Session["UserName"]?.ToString()) ? "Zaloguj" : "Wyloguj " + HttpContext.Current.Session["UserName"].ToString(), "Logout", "Authentication", null, new { @class = "comessaLogin" })
                            <span class="glyphicon glyphicon-log-out" aria-hidden="true" style="font-size:0.6em;"></span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Comessa6</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
